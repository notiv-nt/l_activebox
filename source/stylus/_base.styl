h1, h2, h3, h4, h5, h6, p
	margin 0
	padding 0

h1, h2, h3, h4, h5, h6
	font-family 'RalewayBold', sans-serif
	text-transform uppercase

html, body
	min-height 480px
	min-width 320px


// * { outline: 1px solid red; }

.container, .container-fill
	@extend .clearfix

.container
	padding-left 10px
	padding-right 10px
	margin 0 auto
	max-width 1180px

.btn
	display inline-block
	background-color main-color
	color #fff
	font-family 'RalewaySemiBold', sans-serif
	font-size 13px
	line-height (21/13)
	text-transform uppercase
	padding 13px 50px
	border-radius 2px
	text-decoration none
	transition background-color .3s

	&:hover
		background-color lighten(main-color, 8%)


.social
	font-size 0
	margin -2px

	&.style-1

		a
			border-color #fff
			color #fff
			border-width 2px

	a
		display inline-block
		font-size 20px
		width 40px
		height @width
		line-height @width
		text-transform none
		color #c6cacc
		text-align center
		border 1px solid #e8ecee
		margin 2px
		background-color transparent
		transition border-color .3s, background-color .3s, color .3s

		&:hover
			border-color #fff
			color #fff
			background-color main-color

